<launch>
    <arg name="ros_to_habitat_trans" default="0 0 0"/>
    <arg name="ros_to_habitat_rot" default="0.5 -0.5 -0.5 0.5"/>

    <node pkg="tf2_ros" type="static_transform_publisher" name="ros_to_habitat_map"
          args="$(arg ros_to_habitat_trans) $(arg ros_to_habitat_rot) map habitat_map"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="habitat_to_ros_robot"
          args="0 0 0 $(arg ros_to_habitat_rot) base_footprint habitat_base_footprint"/>
</launch>
