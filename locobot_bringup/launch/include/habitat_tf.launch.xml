<launch>
    <arg name="habitat_to_ros_trans" default="0 0 0"/>
    <arg name="habitat_to_ros_rot" default="-0.5 0.5 0.5 0.5"/>

    <node pkg="tf2_ros" type="static_transform_publisher" name="habitat_to_ros_map"
          args="$(arg habitat_to_ros_trans) $(arg habitat_to_ros_rot) habitat_map map"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="habitat_to_ros_robot"
          args="0 0 0 $(arg habitat_to_ros_rot) habitat_base_footprint base_footprint"/>
</launch>
